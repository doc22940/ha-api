extends layout

block content

  section.section
      #main.container
          hgroup.section-head
            h1.section-head-heading
              | Log in
          .row
            .large-8.medium-8.small-12.columns.large-offset-2.medium-offset-2
              form#registerForm.form(action="/login", method="post")
                .form-component
                  label.form-label.centered(for='username') Username
                  input#username.form-input.text-input.block.large.centered(type='text', name='username', placeholder='Username')
                .form-component
                  label.form-label.centered(for='password') Password
                  input#password.form-input.text-input.block.large.centered(type='password', name='password', placeholder='Password')
                .form-component.actions
                  input#signup.button.large.primary(type='submit', value='Log In')

