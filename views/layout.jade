doctype html
html
  head
    title= title
    meta(name="robots", content="noindex, nofollow")
    meta(name="csrf-token", content="#{csrf_token}")
    link(rel='stylesheet', href='//hyperaud.io/assets/fonts/hyperaudio/style.css')
    link(rel='stylesheet', href='//hyperaud.io/assets/stylesheets/css/main.css')
    link(rel='stylesheet', href='//hyperaud.io/assets/stylesheets/hyperaudio.css')
    link(rel='stylesheet', href='/v1/stylesheets/style.css')

  body.tpl_site.index

    header.header
        .container.row
            .small-12.large-3.medium-3.columns
              h1.header-brandmark
                a.brandmark(href='http://hyperaud.io/')
                  span.brandmark-symbol(data-picture='')
                    span(data-src='//hyperaud.io/assets/images/inserts/logo-hyperaudio.png')
                    span(data-src='//hyperaud.io/assets/images/inserts/logo-hyperaudio@2x.png', data-media='(-webkit-min-device-pixel-ratio:2)')
                    span(data-src='//hyperaud.io/assets/images/inserts/logo-hyperaudio@2x.png', data-media='(min-resolution: 192dpi)')
                      img(src='//hyperaud.io/assets/images/inserts/logo-hyperaudio@2x.png')
                  span.brandmark-label Hyperaudio
            .small-12.large-9.medium-9.columns
              ul.header-navigation.header-navigation
                li.header-navigation-item
                  a.button.primary(href='http://hyperaud.io/') Back to site


    block content

    footer.footer.lt_footer
        .container.row
          p.nav
            span API DEBUG PAGES:
            a.button.small.register(href='/v1/register') Sign up
            a.button.small.login(href='/v1/login') Log in
            a.button.small.logout(href='/v1/logout') Log out

        .container
          .footer-imprint
            p
              | Hyperaudio
              abbr(title='Incorporated') Inc
              | . is a non-profit producing Open Source software, established in Rhode Island, USA.
            p © 2012–2014 Hyperaudio Incorporated. All rights reserved.
            p
              a(href='http://hyperaud.io/terms-of-service/') Terms of Service

